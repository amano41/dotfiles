[include]
	path = ~/.gitconfig.local
[push]
	default = simple
[core]
	quotepath = false
[color]
	ui = auto
[alias]
	a = add .
	ad = add
	au = add -u
	aa = add -A .
	ap = add -p
	c = commit
	ca = commit -a
	cm = commit -m
	co = checkout
	s = status --short --branch
	st = status
	d = diff
	dc = diff --cached
	b = branch -a
	l = !git lg -n 20
	la = !git lg -n 20 --all
	lg = log --graph --pretty=format:'%C(yellow)%h%C(bold cyan)%d%Creset %s %C(magenta)[%cd]%Creset %C(bold blue)<%an>%Creset' --date=relative
	ls = log --stat --pretty=format:'%C(reverse yellow)%h%Creset  %C(magenta)%cd%Creset  %C(bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%B' --date=iso
	lp = log -p --pretty=format:'%C(reverse yellow)%h%Creset  %C(magenta)%cd%Creset  %C(bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%B' --date=iso
	alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
	ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
	amend = commit --amend
[diff]
	tool = WinMerge
[difftool]
	prompt = false
[difftool "WinMerge"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' -e -r -u -x -wl -wr -dl \"a/$MERGED\" -dr \"b/$MERGED\" \"$(cygpath -am \"$LOCAL\")\" \"$(cygpath -am \"$REMOTE\")\"
	trustExitCode = false
[merge]
	tool = WinMerge
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "WinMerge"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' \"$MERGED\"
	trustExitCode = false
[url "github:"]
	insteadOf = https://github.com/
	insteadOf = git@github.com:
[url "bitbucket:"]
	insteadOf = https://bitbucket.org/
	insteadOf = git@bitbucket.org:
[ghq]
	root = ~/dev/src
	root = ~/dev/go/src
