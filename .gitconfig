[include]
	path = ~/.gitconfig.user
	path = ~/.gitconfig.local
[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	autocrlf = false
	quotepath = false
	whitespace = cr-at-eol
	editor = atom --wait
[color]
	ui = auto
[push]
	default = current
[merge]
	ff = false
[pull]
	rebase = preserve
[pretty]
	simple = "tformat:%C(auto,yellow)%h%Creset %C(auto,magenta)%cd%Creset %C(dim)-%Creset%C(auto)%d%Creset %s %C(dim)-%Creset %C(auto,bold blue)%an%Creset"
	subject = "format:%C(auto,yellow)%h%Creset %C(auto,magenta)%cd%Creset %C(auto,bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%s%n"
	message = "format:%C(auto,yellow)%h%Creset %C(auto,magenta)%cd%Creset %C(auto,bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%B"
[alias]
	a = add
	au = add --update
	aa = add --all
	ap = add --patch
	c = commit
	ca = commit --all
	cm = commit -m
	co = checkout
	s = status --short --branch
	st = status
	d = diff
	dc = diff --cached
	b = branch --all
	l = log --graph --pretty=simple --date=relative -n 20
	la = log --graph --pretty=simple --date=relative -n 20 --all
	ln = log --name-status --graph --pretty=subject --date=iso -n 20
	ls = log --stat --pretty=message --date=iso
	lp = log --patch --pretty=subject --date=iso
	alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
	ignore = !"f() { for x in "$@"; do echo "$x" >> "${GIT_PREFIX}".gitignore; shift; done; }; f"
	init-ignore = !"f() { local s=$1; shift; for x in "$@"; do s="$s,$x"; shift; done; curl -L -s -o .gitignore "http://www.gitignore.io/api/$s";}; f"
	amend = commit --amend
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
[url "git@bitbucket.org:"]
	pushInsteadOf = https://bitbucket.org/
	pushInsteadOf = git://bitbucket.org/
[ghq]
	root = ~/dev/src
	root = ~/dev/go/src
