[include]
	path = ~/.gitconfig.local
[push]
	default = simple
[core]
	quotepath = false
[color]
	ui = auto
[alias]
	ci = commit
	co = checkout
	st = status
	lg = log --graph --all --oneline --decorate --date-order
	hist = log --graph --all --oneline --decorate --date-order
[diff]
	tool = WinMerge
[difftool]
	prompt = false
[difftool "WinMerge"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' -e -r -u -x -wl -wr -dl \"a/$MERGED\" -dr \"b/$MERGED\" \"$(cygpath -am \"$LOCAL\")\" \"$(cygpath -am \"$REMOTE\")\"
	trustExitCode = false
[merge]
	tool = WinMerge
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "WinMerge"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' \"$MERGED\"
	trustExitCode = false
[url "github:"]
	insteadOf = https://github.com/
	insteadOf = git@github.com:
[url "bitbucket:"]
	insteadOf = https://bitbucket.org/
	insteadOf = git@bitbucket.org:
