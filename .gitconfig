[core]
	autocrlf = false
	quotepath = false
	whitespace = cr-at-eol
	editor = atom --wait
	pager = less -S
[color]
	ui = auto
[push]
	default = current
[pull]
	rebase = preserve
[merge]
	ff = false
[rebase]
	autosquash = true
[log]
	date = iso
[pretty]
	compact = "tformat:%C(yellow)%h%C(auto)%d%Creset %s %C(bold black)-%Creset %C(magenta)%cd%Creset %C(bold black)-%Creset %C(bold blue)%an%Creset"
	message = "format:%C(yellow)%h%C(auto)%d%Creset %C(bold black)-%Creset %C(magenta)%cd%Creset %C(bold black)-%Creset %C(bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%B"
[alias]
	a = add
	au = add -u
	aa = add -A
	ap = add -p
	c = commit -v
	cm = commit -m
	s = status
	d = diff
	dc = diff --cached
	dw = diff --word-diff=color --unified=1
	dwc = diff --word-diff=color --unified=1 --cached
	dd = difftool --dir-diff
	ddc = difftool --dir-diff --cached
	dr = !"f() { local r=${1:-HEAD}; git diff $r~..$r; }; f"
	b = branch
	ba = branch -a
	bd = branch -D
	co = checkout
	cob = checkout -b
	cop = checkout -p
	r = reset
	rs = reset --soft
	rh = reset --hard
	pl = pull
	ps = push
	f = fetch
	fp = fetch --prune
	m = merge
	mf = merge --ff
	ff = merge --ff
	rb = rebase
	rbi = rebase -i
	rba = rebase --abort
	rbc = rebase --continue
	cp = cherry-pick
	sh = show
	sl = stash list
	ss = stash save --include-untracked
	sa = !"f() { git stash apply stash@{${1:-0}}; }; f"
	sd = !"f() { git stash drop stash@{${1:-0}}; }; f"
	sp = !"f() { git stash pop stash@{${1:-0}}; }; f"
	l = log --oneline --decorate
	la = log --oneline --decorate --graph --all
	ll = log --pretty=compact --date=relative
	lla = log --pretty=compact --date=relative --graph --all
	ln = log --name-status --pretty=message --date=iso
	ls = log --stat --pretty=message --date=iso
	lp = log --patch --pretty=message --date=iso
	lt = log --simplify-by-decoration --pretty=message --date=iso
	discard = checkout --
	unstage = reset -q HEAD --
	uncommit = reset --mixed HEAD~
	recommit = commit --amend --no-edit
	amend = commit --amend -v
	reword = commit --amend -m
	fixup = commit --fixup
	squash = commit -v --squash
	chmod = update-index --add --chmod
	branches = branch -avv
	tags = tag
	stashes = stash list
	stashed = stash list
	remotes = remote -v
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[diff "opml"]
	textconv = opml2md
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
[url "git@bitbucket.org:"]
	pushInsteadOf = https://bitbucket.org/
	pushInsteadOf = git://bitbucket.org/
[ghq]
	root = ~/dev/src
	root = ~/dev/go/src
[include]
	path = ~/.gitconfig.user
	path = ~/.gitconfig.os
	path = ~/.gitconfig.local
