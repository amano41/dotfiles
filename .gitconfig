[core]
	autocrlf = false
	quotepath = false
	whitespace = cr-at-eol
	editor = vim -c 'set fenc=utf-8' -c 'startinsert'
	pager = less -FRSX
[color]
	ui = auto
[push]
	default = current
[pull]
	rebase = preserve
[merge]
	ff = false
[rebase]
	autosquash = true
[pager]
	log = diff-highlight | less -FRSX
	show = diff-highlight | less -FRSX
	diff = diff-highlight | less -FRSX
[interactive]
	diffFilter = diff-highlight | less -FRSX
[log]
	date = iso
[pretty]
	compact = "tformat:%C(yellow)%h%C(auto)%d%Creset %s %C(bold black)-%Creset %C(magenta)%cd%Creset %C(bold black)-%Creset %C(bold blue)%an%Creset"
	message = "format:%C(yellow)%h%C(auto)%d%Creset %C(bold black)-%Creset %C(magenta)%cd%Creset %C(bold black)-%Creset %C(bold blue)%an <%ae>%Creset%n%n%w(0,4,4)%B"
[diff]
	renames = true
	indentHeuristic = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[alias]
	a = add
	au = add -u
	aa = add -A
	ap = add -p
	c = commit -v
	cm = commit -m
	s = status
	d = diff
	dc = diff --cached
	dw = diff --word-diff=color --unified=1
	dwc = diff --word-diff=color --unified=1 --cached
	dd = difftool --dir-diff
	ddc = difftool --dir-diff --cached
	dr = !"f() { r=${1:-HEAD}; git diff $r~..$r; }; f"
	b = branch
	ba = branch -a
	bd = branch -D
	bdr = push --delete
	bdo = push --delete origin
	co = checkout
	cob = checkout -b
	cop = checkout -p
	r = reset
	rs = reset --soft
	rh = reset --hard
	pl = pull
	ps = push
	f = fetch
	fp = fetch --prune
	m = merge --no-edit
	mf = merge --ff
	ff = merge --ff
	rb = rebase
	rbi = rebase -i
	rba = rebase --abort
	rbc = rebase --continue
	cp = cherry-pick
	sh = show
	sl = stash list
	ss = stash save --include-untracked
	sa = !"f() { git stash apply stash@{${1:-0}}; }; f"
	sd = !"f() { git stash drop stash@{${1:-0}}; }; f"
	sp = !"f() { git stash pop stash@{${1:-0}}; }; f"
	l  = !"f() { git log -${1:-30} --oneline --decorate --graph; }; f"
	la = !"f() { git log -${1:-30} --oneline --decorate --graph --all; }; f"
	ll  = !"f() { git log -${1:-30} --pretty=compact --date=relative --graph; }; f"
	lla = !"f() { git log -${1:-30} --pretty=compact --date=relative --graph --all; }; f"
	ln = log --pretty=message --date=iso --name-status
	lp = log --pretty=message --date=iso --patch
	lt = log --pretty=message --date=iso --simplify-by-decoration
	g = grep -I
	gi = grep -Ii
	ls = ls-files
	discard = checkout --
	unstage = reset -q HEAD --
	uncommit = reset --mixed HEAD~
	recommit = commit --amend --no-edit
	amend = commit --amend -v
	reword = commit --amend -m
	fixup = commit --fixup
	squash = commit -v --squash
	chmod = update-index --add --chmod
	branches = branch -avv
	tags = tag
	stashes = stash list
	stashed = stash list
	remotes = remote -v
[diff "opml"]
	textconv = opml2md
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
[url "git@bitbucket.org:"]
	pushInsteadOf = https://bitbucket.org/
	pushInsteadOf = git://bitbucket.org/
[ghq]
	root = ~/dev/src
	root = ~/dev/go/src
[include]
	path = ~/.gitconfig.user
	path = ~/.gitconfig.os
	path = ~/.gitconfig.local
