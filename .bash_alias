## ls
alias ls='ls --show-control-chars --color -F --time-style="+%Y-%m-%d %H:%M:%S" --group-directories-first'
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -lA'
alias lt='ls -lt'
alias lta='ls -ltA'

## Git
alias g='git'
alias ga='git add'
alias gau='git add --update'
alias gaa='git add --all'
alias gap='git add --patch'
alias gc='git commit --verbose'
alias gca='git commit --verbose --all'
alias gcm='git commit -m'
alias gcam='git commit --all -m'
alias gs='git status --short --branch'
alias gst='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdw='git diff --word-diff=color --unified=1'
alias gdwc='git diff --word-diff=color --unified=1 --cached'
alias gdr='git dr'  ## diff between revisions
alias gb='git branch --all'
alias gbd='git branch --delete'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gsl='git stash list'
alias gss='git stash save --include-untracked'
alias gsa='git sa'  ## stash apply
alias gsd='git sd'  ## stash drop
alias gl='git l'      ## log -n 20
alias gla='git la'    ## log --graph --all -n 20
alias gll='git ll'    ## log
alias glla='git lla'  ## log --graph --all
alias gln='git ln'    ## log --name-status
alias glp='git lp'    ## log --patch
alias gls='git ls'    ## log --stat
alias glt='git lt'    ## log --simplify-by-decoration

## エイリアスで短縮した Git コマンドでも補完が効くようにする
## あらかじめ git-completion.bash を読み込んでおく必要がある
__git_complete g __git_main
__git_complete ga _git_add
__git_complete gau _git_add
__git_complete gaa _git_add
__git_complete gap _git_add
__git_complete gc _git_commit
__git_complete gcm _git_commit
__git_complete gd _git_diff
__git_complete gdc _git_diff
__git_complete gdw _git_diff
__git_complete gdwc _git_diff
__git_complete gdr _git_diff
__git_complete gb _git_branch
__git_complete gbd _git_branch
__git_complete gco _git_checkout
__git_complete gcob _git_checkout
