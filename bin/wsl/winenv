#!/usr/bin/env bash

set -eu


function usage() {
	echo "usage: $(basename $0) [-p] WINENV" 1>&2
	exit 1
}


function winenv() {

	value=$(cmd.exe /C "echo %$1%" | tr -d '\r')

	if [[ $value == %$1% ]]; then
		echo "error: environment variable $1 not defined" 1>&2
		return 1
	else
		echo "$value"
	fi

}


function winenv_path() {

	IFS=';'

	for path in $(winenv "$1");
	do
		wslpath -au "$path"
	done | paste -d: -s

}


if [ $# -eq 0 ]; then
	usage
fi

case "$1" in
	-p) winenv_path "$2" ;;
	-*) usage ;;
	* ) winenv "$1" ;;
esac
